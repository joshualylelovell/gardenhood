<div>
  <div class='login-page'>
    <div class="row">

      <div class="form">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'new_gardener gardener-register'}) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "email" %>
          </div>

          <div class="field">
            <%= f.text_field :username, placeholder: "username" %>
          </div>

          <div class="field">
            <%= f.text_field :address, placeholder: "address" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm password" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "success button" %>
          </div>
          <p class="message">Already registered? <a href="#" class="form-toggle">Sign In</a></p>
        <% end %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'new_gardener gardener-login'}) do |f| %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "email" %>
          </div>

          <div class="field">
            <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field remember-me">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", class: "success button" %>
          </div>
          <p class="message">Not registered? <a href="#" class="form-toggle">Create an account</a></p><br>
          <p class="message"><%= link_to "Forgot your password?", new_password_path(resource_name)%><p>

        <% end %>

      </div>
    </div>
  </div>
</div>
